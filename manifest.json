{
  "manifest_version": 2,

  "name": "Bitcoin Now",
  "description": "Simple bitcoin price tracker",
  "version": "1.21",
  "permissions": [
    "activeTab"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Bitcoin Now"
  },
  "background": {
    "scripts": ["jquery-3.2.1.min.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}